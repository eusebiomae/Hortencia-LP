<% 
    form_email = form_tipo == 'Email';
%> 
<div class="form">
    <form action="javascript:" id="<%= form_nome %>" name="<%= form_nome %>" data-tipo="<%= form_tipo %>" data-hubid-form="<%= form_canal %>" novalidate>
       
        <% if(form_email) { %>
        <div class="form-group">
            <label for="<%= form_prefixo %>_Contato" class="form-label">Gostaria de ser contatado por </label>
            <select name="Forma_de_Contato" id="<%= form_prefixo %>_Contato" class="form-select js-select-contato" required>
                <option value="" selected>Escolha uma opção de contato</option>
                <option value="Email">E-mail</option>
                <option value="Whatsapp" data-tel-required>Whatsapp</option>
                <option value="Telefone" data-tel-required>Telefone</option>
            </select>
            <div class="invalid-feedback">Escolha uma forma de contato.</div>
        </div>
        <% } %>

        <div class="form-group">
            <label for="<%= form_prefixo %>_Nome" class="form-label">Nome*</label>
            <input type="text" name="Nome" id="<%= form_prefixo %>_Nome" class="form-control" required>
            <div class="invalid-feedback">Digite seu nome.</div>
        </div>
        <div class="form-group">
            <label for="<%= form_prefixo %>_Email" class="form-label">E-mail*</label>
            <input type="email" name="Email" id="<%= form_prefixo %>_Email" class="form-control" required>
            <div class="invalid-feedback">Digite um e-mail válido.</div>
        </div>
        <div class="form-group">
            <label for="<%= form_prefixo %>_Tel" class="form-label">Telefone com DDD* <% if(form_email) { %><span>(opcional)</span><%}%></label>
            <input type="tel" name="Telefone" id="<%= form_prefixo %>_Tel" class="form-control" pattern=".{14,15}" maxlength="15" data-mask="tel" required >
            <div class="invalid-feedback">Digite um telefone válido.</div>
        </div>
        
        <% if(form_email) { %>
        <div class="form-group">
            <label for="<%= form_prefixo %>_Mensagem" class="form-label">Mensagem</label>
            <textarea class="form-control" name="Mensagem" id="<%= form_prefixo %>_Mensagem" cols="30" rows="3" required>Olá, gostaria de receber mais informações sobre o <%=nome%>.</textarea>
            <div class="invalid-feedback">Digite uma mensagem.</div>
        </div>
        <% } %>
        
        <button type="submit" class="btn-form"><%= form_btn %></button>
    </form>
</div>